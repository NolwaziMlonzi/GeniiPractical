@model IEnumerable<pointOfSales.Models.Invoice>

@{
    ViewBag.Title = "LogInvoice";
}

<h2>LogInvoice</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            R: @Session["InvoiceTotal"].ToString()
@Html.HiddenFor(modelItem => item.Total, new { @Value = @Session["InvoiceTotal"] })
        </td>
        <td>
            @{Session["InvoiceID"] = item.InvoiceID;}
            @Html.ActionLink("Click to Save Invoice", "Edit", new { id=item.InvoiceID }) |
            @Html.ActionLink("View All Invoices", "Index", new { id=item.InvoiceID })
        </td>
    </tr>
}

</table>
