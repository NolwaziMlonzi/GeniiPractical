@model IEnumerable<pointOfSales.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2> Existing Products in The System</h2>

<p>
    <i class="fa fa-plus" aria-hidden="true">@Html.ActionLink(" Add New Item", "Create")</i>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostPerItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductsInStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostPerItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductsInStock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceID)
        </td>
        <td>
            <i class="fa fa-pencil" aria-hidden="true"> @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |</i>
            <i class="fa fa-eye" aria-hidden="true"> @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |</i>
            <i class="fa fa-trash" aria-hidden="true"> @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }) </i>
        </td>
    </tr>
}

</table>
